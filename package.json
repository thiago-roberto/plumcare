{
  "name": "plumcare-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "plumcare-frontend",
    "plumcare-backend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently -n fe,be -c cyan,green \"npm run dev:fe\" \"npm run dev:be\"",
    "dev:fe": "npm run dev --workspace=plumcare-frontend",
    "dev:be": "npm run dev --workspace=plumcare-backend",
    "dev:docker": "docker compose up",
    "dev:db": "docker compose up postgres",
    "dev:redis": "docker compose up redis",
    "dev:medplum": "docker compose up medplum",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:reset": "docker compose down -v && docker compose up -d"
  },
  "engines": {
    "node": "^22.18.0 || >=24.2.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
