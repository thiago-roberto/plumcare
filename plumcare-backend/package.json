{
  "name": "plumcare-backend",
  "version": "1.0.0",
  "description": "PlumCare backend - EHR integrations for Athena, Elation, and NextGen",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "dev:old": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "start:old": "node dist/index.js",
    "test": "vitest",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "setup:medplum": "tsx scripts/setup-medplum-client.ts",
    "typeorm": "typeorm-ts-node-esm",
    "migration:generate": "npm run typeorm -- migration:generate -d src/database/data-source.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/database/data-source.ts"
  },
  "dependencies": {
    "@faker-js/faker": "^10.1.0",
    "@medplum/ccda": "^5.0.10",
    "@medplum/core": "^5.0.10",
    "@medplum/fhirtypes": "^5.0.10",
    "axios": "^1.7.9",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "inversify": "^7.10.8",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.28",
    "uuid": "^11.0.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^9.39.2",
    "eslint-plugin-unused-imports": "^4.3.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
